<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingListGreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryVariant">#10B14B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8BC34A</item>
        <item name="colorSecondaryVariant">#CDDC39</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.NoFullWindowGreen" parent="Theme.ShoppingListGreen">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.ShoppingListBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryVariant">#03A9F4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#02E2FF</item>
        <item name="colorSecondaryVariant">#196487</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.NoFullWindowBlue" parent="Theme.ShoppingListBlue">
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>